<!-- 
    Places
    Displays form to edit existing place
-->

<%- include("../partials/header") %>
<div class="container">
    <div class="title">
        <h3>Edit <%= place.location%></h3>
    </div>
    <div class="row center">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <form action="/places/<%= place._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Your name</label>
                    <input class="form-control" type="text" value="<%=place.name%>" name="place[name]">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input class="form-control" type="text" value="<%=place.location%>" name="place[location]">
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" value="<%=place.displayImage%>" name="place[displayImage]">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input class="form-control" type="text" value="<%=place.description%>" name="place[description]">
                </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </form>
            <a href="/places/<%=place._id%>">Go back</a>
        </div>
    </div>

</div>

<%- include("../partials/footer") %>
