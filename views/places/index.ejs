<!-- 
    Places
    Index route that displays all the existing places
-->
<%- include("../partials/header") %>
<div class="bar">
    <h3>Welcome to my Blogs website</h3>
    <p>View best places in the world</p>
    <p>
        <a href="/places/new" class="btn btn-primary btn-lg">Add new place</a>
    </p>

</div>

<div class="container">
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <%places.forEach((place)=>{%>
        <div class="col-md-3 col-sm-6" style="background: grey;"> 
            <p>Name: <%= place.name %></p>
            <p>Location: <%= place.location %></p>
            <p>Image: <%= place.displayImage %></p>
            <p>Description: <%= place.description %></p>
            <p>
                <!-- id is generated by database automatically -->
                <a href="/places/<%=place._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>

    <%})%>
    
    </div>
</div>

<%- include("../partials/footer") %>
