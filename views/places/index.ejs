<!-- 
    Places
    Index route that displays all the existing places
-->
<%- include("../partials/header") %>
<div class="bar">
    <div class="container">
        <div class="content" style="padding-top: 30px;">
        <h3>Welcome to my Blogs website</h3>
        <p>View best places in the world</p>
        <p>
            <a href="/places/new" class="btn btn-primary btn-lg">Add new place</a>
        </p>
        </div>
    </div>

</div>


<div class="layout">
    <div class="container">
        <div class="row">
            <%places.forEach((place)=>{%>
                <div class="col-md-4">
                    <div class="card" style="box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .1); margin-bottom: 1.5rem;">
                        <img class="card-img-top" src="<%=place.displayImage%>" alt="<%=place.location%>" >
                        <div class="card-body">
                            <h4 class="card-title"><%= place.location %></h4>
                            <p class="card-text"><%= place.description %></p>
                            <p class="card-text"><em>Submitted by: <%= place.user.username %></em></p>
                            <!-- id is generated by database automatically -->
                            <a href="/places/<%=place._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <%})%>

        </div>
    </div>
</div>
