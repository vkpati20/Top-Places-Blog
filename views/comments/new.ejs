<!-- 
    Comments
    Displays form to create new comment
-->

<%- include("../partials/header") %>

<div class="container">
    <div class="title">
        <h3>Add comment to <%= place.location%> post</h3>
    </div>
    <div class="row center">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <form action="/places/<%=place._id%>/comments/" method="POST">
                <div class="form-group">
                    <textarea class="form-control text-area" type="text" placeholder="Write your comment here..." name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/places">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>