<!-- 
    Comments
    Displays form to create new comment
-->

<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new Comment to <%=place.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%=place._id%>/comments/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Write your comment here..." name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/places">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>